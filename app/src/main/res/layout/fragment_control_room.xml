<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.MenuFragment">

    <!-- Logo centralizada no topo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ifam_logo"
            android:contentDescription="Logo IFAM" />

        <TextView
            android:id="@+id/name_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controle dos Espaços"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- box verde dos espaços -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@android:color/holo_green_light"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <!--imagem a esquerda do auditorio-->
        <ImageView
            android:id="@+id/room_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Imagem da sala"
            android:gravity="center"
            android:src="@drawable/auditorio_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Tipo de sala -->
            <TextView
                android:id="@+id/room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditório"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- Descrição da sala -->
            <TextView
                android:id="@+id/room_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição..."
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <!-- Horário -->

                <!-- Local -->
                <TextView
                    android:id="@+id/room_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/darker_gray"
                    android:padding="8dp"
                    android:text="Horário: 09h - 19:00"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/room_locale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local: CT"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:background="@android:color/darker_gray"
                    android:padding="8dp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_blue_dark"
                android:drawableTop="@drawable/edit_icon"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>